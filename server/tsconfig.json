{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "paths": {
      "@stakeoption/shared": ["../packages/shared/src"]
    },
    "baseUrl": "."
  },
  "include": ["src/**/*", "../packages/shared/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
